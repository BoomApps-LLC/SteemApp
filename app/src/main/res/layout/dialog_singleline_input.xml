<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:application="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialogSingleLineInput_etInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textColorHint="@color/grey_primary"
        application:hintAnimationEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="25"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/colorPrimary"
            application:backgroundTint="@color/grey_primary" />

    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:id="@+id/dialogRangeSelect_llButtons"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:paddingRight="24dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/dialogSingleLineInput_btnConfirm"
            style="@style/DialogButton"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:text="@string/dialog_positive_button" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/dialogSingleLineInput_btnCancel"
            style="@style/DialogButton"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/dialogSingleLineInput_btnConfirm"
            android:text="@string/dialog_negative_button" />


    </RelativeLayout>

</LinearLayout>